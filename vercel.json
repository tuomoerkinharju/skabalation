{
  "builds": [
    { "src": "public/index.html",        "use": "@vercel/static" },
    { "src": "public/css/**",            "use": "@vercel/static" },
    { "src": "public/js/**",             "use": "@vercel/static" },
    { "src": "public/images/**",         "use": "@vercel/static" },
    { "src": "public/audio/**",          "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/js/(.*)",       "dest": "/public/js/$1" },
    { "src": "/css/(.*)",      "dest": "/public/css/$1" },
    { "src": "/images/(.*)",   "dest": "/public/images/$1" },
    { "src": "/audio/(.*)",    "dest": "/public/audio/$1" },
    { "src": "/(.*)",          "dest": "/public/index.html" }
  ]
}